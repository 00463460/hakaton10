# ============================================================================
# Physical AI Textbook RAG Backend - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ----------------------------------------------------------------------------
# Cohere API Configuration
# ----------------------------------------------------------------------------
# Get your API key from: https://dashboard.cohere.com/api-keys
# Free tier includes: 100 requests/minute, 1000 requests/month
COHERE_API_KEY=your_cohere_api_key_here

# ----------------------------------------------------------------------------
# Qdrant Vector Database Configuration
# ----------------------------------------------------------------------------
# Option 1: Cloud (Qdrant Cloud - Free tier: 1GB storage)
# Get from: https://cloud.qdrant.io/
QDRANT_URL=https://your-cluster-url.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here

# Option 2: Local development (in-memory mode)
# QDRANT_URL=:memory:
# QDRANT_API_KEY=

# ----------------------------------------------------------------------------
# Neon PostgreSQL Database Configuration
# ----------------------------------------------------------------------------
# Get from: https://neon.tech/ (Free tier: 3 GB storage)
# Format: postgresql://user:password@host/dbname?sslmode=require
NEON_DB_URL=postgresql://username:password@ep-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------
# Environment (development, staging, production)
ENVIRONMENT=development

# Port for the FastAPI server
PORT=8000

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ----------------------------------------------------------------------------
# CORS Configuration
# ----------------------------------------------------------------------------
# Allowed origins for CORS (comma-separated)
# For production, specify your frontend domain(s)
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.vercel.app

# ----------------------------------------------------------------------------
# RAG Configuration
# ----------------------------------------------------------------------------
# Number of chunks to retrieve for context
TOP_K_CHUNKS=5

# Maximum tokens for LLM response
MAX_RESPONSE_TOKENS=500

# Temperature for LLM (0.0 = deterministic, 1.0 = creative)
LLM_TEMPERATURE=0.3

# ----------------------------------------------------------------------------
# Optional: Rate Limiting
# ----------------------------------------------------------------------------
# Maximum requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# ----------------------------------------------------------------------------
# Optional: Monitoring & Analytics
# ----------------------------------------------------------------------------
# Sentry DSN for error tracking (optional)
# SENTRY_DSN=your_sentry_dsn_here

# PostHog API key for analytics (optional)
# POSTHOG_API_KEY=your_posthog_key_here
